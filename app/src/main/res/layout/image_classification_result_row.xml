<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

  <TextView
      android:id="@+id/result_row_score_text"
      style="@style/ImageClassificationResultRowTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:minHeight="24dp"/>

  <TextView
      android:id="@+id/result_row_name_text"
      style="@style/ImageClassificationResultRowTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@id/result_row_score_text"
      android:minHeight="24dp"/>

  <ProgressBar
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:id="@+id/result_row_progess_bar"
      android:layout_alignParentStart="true"
      android:layout_below="@id/result_row_score_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:max="100"
      android:progress="50"
      android:minHeight="24dp">

  </ProgressBar>

</RelativeLayout>
